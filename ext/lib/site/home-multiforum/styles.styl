@import '../../../node_modules/argob-poncho/dist/css/poncho.css'
@import './forum-container/styles.styl'
@import './search/styles.styl'
@import './search/results-search/styles.styl'

.jumbotron_body
  padding: 50px 0 !important
  .container
    .lead
      font-size:18px
      margin-top: 5px
      &.highlight
        font-size:22px
        font-weight: 400
        text-shadow: none !important
      span
        color:#0695d6
    .participar
      margin-top: 1rem
      margin: 10px;
      background-color: #0695d6;
.ext-site-home-multiforum
  background: transparent

  .forums-list
    display: flex
    flex-direction: column
    flex-wrap: wrap
    padding-top: 1em

    .forums-list-title
      font-size: 35px
      text-align: center
      font-weight: 500
      margin-bottom: 20px

    .forums-list-item
      max-width: 100%
      width: 100%
      margin: 0 10px 20px

      @media (min-width: 992px)
        width: 440px

  .cover
    text-align: center

    h1
      max-width: 500px
      margin: 0 auto .3em

  .fa-group
  .fa-newspaper-o
  .fa-bullhorn
  .arrow-down
    background-size: cover
    background-repeat: no-repeat
    display: inline-block
    margin-top: 0
    margin-right: 3%
    width: 70px
    height: 55px
    margin-bottom:20px
    @media screen and (max-width: 750px)
      width: 40px
      height: 30px
      margin-top:25px

  .lead-paragraph
    margin-top: 1.5em
    text-align: center
    font-size: 20px
    padding-left: 5%;
    padding-right: 5%;
    &.last
      color: #0695d6
      font-weight:bold
      flex-direction:column
      justify-content:center

    .bold {
      font-weight: 400
    }

    .skyblue {
      font-weight: 400;
    }
  .arrow
    text-align:center



  .section-icons
    font-weight:600
    margin-top:20px
    @media (max-width: 760px)
      margin-left:6%
    @media (max-width: 460px)
      margin-left:10px
    .section-icon
      display: inline-block
      @media (max-width: 760px)
        display:flex
        flex-direction:column
      width:30% !important
      .icon
        width:100px
        float: left
      .text
        padding-left: 115px
        @media (max-width: 760px)
          padding-left:10px
        padding-top: 10px
        font-weight: 100
        font-size: 14px

  .fa-group
    background-image: url("ext/lib/site/home-multiforum/users.svg")

  .fa-newspaper-o
    background-image: url("ext/lib/site/home-multiforum/newspaper.svg")

  .fa-bullhorn
    background-image: url("ext/lib/site/home-multiforum/bullhorn.svg")

  .icon-arrow-down
    font-size: 20px
    color: #0695d6
    cursor: pointer

  .content-center
    display: flex;
    align-self: center;
    margin: 20px

    .btn
    .dropdown-element
    .dropbtn
      min-width:130px
      padding: 5px 25px 5px 25px !important

    .btn-secondary
      background-color: #fff

    .btn-active
      text-underline: none
      background-color: #e9e9e9
      color: #0695d6
      &:focus
        outline: none

.dropbtn
  width:150px
  font-size:16px !important
  @media (min-width: 701px)
    display:none

.dropdown-element:hover .dropdown-content
  @media (max-width: 700px)
    display: block

.dropdown-content
  @media (max-width: 700px)
    li
      display:block
      margin-bottom:0

.dropdown-content
  @media (max-width: 700px)
    display: none
    position: absolute
    z-index: 1
    left: -14px
    top: 36px

.dropdown-element
  @media (max-width: 700px)
    position: relative
    display: inline-block

.small-arrow
  font-size:9px !important

.show-more
  height: 50px

.border-bottom-amarillo 
	border-bottom 3px solid #e7ba61
.border-top-amarillo 
	border-top 3px solid #e7ba61
.sub-footer 
	background-color #242c4f
	padding 20px 0 40px 0
.main-footer 
	padding 50px 0 0 0
	padding-bottom 0px
	background #f2f2f2 !important
footer 
	.menu 
		&.nav 
			a 
				color black
				font-weight 400
				font-size 16px
	h2 
		&.h3 
			color black !important
			text-transform inherit !important
.btn-primary 
	background-color #242c4f!important
	&:hover 
		background-color #14182c!important
a 
	&.header-link 
		&.hidden-md-down 
			color #242c4f
			&:hover 
				background-color #14182c!important
				color white!important


